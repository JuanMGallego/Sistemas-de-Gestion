@model Entidades.clsPersona

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Introducir los datos de una nueva persona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
