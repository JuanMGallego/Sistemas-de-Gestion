@model TuProyecto.Models.clsPersona

@using (Html.BeginForm("PersonaModificada", "Home", FormMethod.Post))
{
    <div>
        <label for="idPersona">Id Persona:</label>
        <input type="text" name="idPersona" value="@Model.IdPersona" />
    </div>

    <div>
        <label for="nombre">Nombre:</label>
        @Html.TextBox("nombre", Model.Nombre)
    </div>

    <div>
        <label for="apellidos">Apellidos:</label>
        @Html.TextBoxFor(model => model.Apellidos)
    </div>

    <!-- Agrega otros campos según sea necesario usando TextBoxFor -->

    <input type="submit" value="Guardar cambios" />
}
